<div class="form-group row">
  <label for="{{ id }}-0" class="col-sm-3 col-form-label">{{ label }}</label>
  <div class="col-sm-9">
    {{#each options}}
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="{{ ../name }}" value="{{ value }}" id="{{../id}}-{{ @index }}"
        title="{{ ../title }}" {{#if checked}} checked="checked"{{/if}} {{#if disabled}} disabled{{/if}}
        {{#if readonly}} readonly{{/if}}> <label class="form-check-label" for="{{../id}}-{{ @index }}">{{ label }}</label>
    </div>
    {{/each}}
  </div>
</div>
