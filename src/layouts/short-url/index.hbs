  <div class="modal fade" id="editAddModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add/Edit Callback URL - <span class="urlName"></span><span class="urlId d-none"></span></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-3">
              <select type="text" class="form-control" id="editCallBackDomainUrl">
                <option value="http://">http://</option>
                <option value="https://">https://</option>
              </select>
            </div>
            <div class="col-md-9">
              <textarea class="form-control" id="editCallbackUrl" name="editCallbackUrl" value=""
                placeholder="Enter Callback URL"></textarea>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 col-form-label"></label>
            <label class="col-md-9 col-form-label" style="line-break: anywhere;"><small><b>Sample URL :
                </b>google.com?mobile=%MOBILE%&camp=%CAMPAIGN_NAME%&rectime=%RECTIME%&circle=%CIRCLE%&operator=%OPERATOR%</small></label>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="updateSpielyLink">Update Spiely Link</button>
        </div>
      </div>
    </div>
