{{> sideNav }}
<!-- [ Main Content ] start -->
<div class="pcoded-main-container">
  <div class="pcoded-content">
    <!-- [ Main Content ] start -->
    <div class="p-0">
      <div class="p-0 contant-holder">
        <!-- contant holder start -->
        <h3 class="main-head-3">Campaign Report</h3>
        <!-- contant holder end -->
        <div class="col-md-12 pt-2 pb-5">
          <div class="frm-border campaign-div">
            <form id="controls-form">
              <div class="row">
                <div class="col-md-2">
                  <div class="form-group">
                    <label for="txt-from">From</label>
                    <input type="text" class="form-control" id="fromDate" required>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="form-group">
                    <label for="txt-from">To</label>
                    <input type="text" class="form-control" id="toDate" required>
                  </div>
                </div>
                <div class="col-md-1">
                  <div class="form-group mt-4 pt-1">
                    <input type="hidden" id="pageNumber" value="1" />
                    <input type="hidden" id="totalPages" value="1" />
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="form-group mt-4 pt-1 ">
                  <button class="btn btn-secondary d-none" id="donwloadCampaignReport"></button>
                  </div>
                </div>
              </div>
            </form>
          </div>

          <div class="campaign-div">
            <table id="misTable" class="table table-striped table-sm table-bordered display responsive no-wrap"
              style="width:100%">
              <thead>
                <tr>
                  <th class="all">Summary Date</th>
                  <th class="all">Campaign Name</th>
                  <th class="all">Campaign Id</th>
                  <th class="all">Total Request</th>
                  <th class="all">Total Rejected</th>
                  <th class="all">Total Submit</th>
                  <th class="none">Total Delivered</th>
                  <th class="none">Total Failed</th>
                  <th class="none">Total Awaited</th>
                  <th class="none">Unique Clicks</th>
                  <th class="none">Sender ID</th>
                  <th class="none">schedule Date</th>
                  <th class="none">schedule Time</th>
                  <th class="all">Action</th>
                </tr>
              </thead>
            </table>

            <div class="tablePageNavi text-center">
              <ul id="misPagination" class="pagination table-pagination">
                <li class="page-item"><a class="page-link" id="pagePrev" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" id="pageNext" href="#">Next</a></li>
              </ul>
            </div>
          </div>
          <div id="clicker-div" class="d-none">
            <button type="button" class="btn btn-secondary backToHome"><i class="feather icon-chevron-left"></i>
              Back</button>
            <div class="row contant-holder-dash">
              <div class="col-md-8">
                <div class="col-md-12">
                  <div class="card">
                    <div class="card-header">
                      <h5>Clicker Status</h5>
                    </div>
                    <div class="card-body">
                      <div id="clickerStatus"></div>
                    </div>
                  </div>
                </div>
                <div class="col-md-12 ">
                  <div class="card">
                    <div class="card-header">
                      <h5>Delivery Status</h5>
                    </div>
                    <div class="card-body">
                      <div id="deliveryStatus"></div>
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <button class="btn btn-info mx-auto d-none " id="donwloadFileButton"></button>
                </div>

              </div>

              <div class="col-md-4">
                <!-- order-card start -->
                <div class="col-md-12 dash-tab">
                  <div class="card bg-c-primary-light order-card">
                    <div class="card-body">
                      <h6 class="text-white">Total Submit</h6>
                      <h2 class="text-right text-white">
                        <i class="feather clock icon-clock float-left"></i>
                        <span class="counter-Data" id="totalSubmit">0</span>
                      </h2>
                    </div>
                  </div>
                </div>
                <div class="col-md-12 dash-tab">
                  <div class="card bg-c-primary order-card">
                    <div class="card-body">
                      <h6 class="text-white">Total Delivered</h6>
                      <h2 class="text-right text-white">
                        <i class="feather calendar icon-calendar float-left"></i>
                        <span id="totalDelivered">0</span>
                      </h2>
                    </div>
                  </div>
                </div>
                <div class="col-md-12 dash-tab">
                  <div class="card bg-c-secondary order-card">
                    <div class="card-body">
                      <h6 class="text-white">Total Failed</h6>
                      <h2 class="text-right text-white">
                        <i class="feather check-square icon-check-square float-left"></i>
                        <span id="totalFailed">0</span>
                      </h2>
                    </div>
                  </div>
                </div>
                <div class="col-md-12 dash-tab">
                  <div class="card bg-c-purple order-card">
                    <div class="card-body">
                      <h6 class="text-white">Total Awaited</h6>
                      <h2 class="text-right text-white">
                        <i class="feather mail icon-mail float-left"></i>
                        <span id="totalAwaited">0</span>
                      </h2>
                    </div>
                  </div>
                </div>
                <!-- order-card end -->
                <!-- order-card start -->
                <div class="col-md-12 dash-tab">
                  <div class="card bg-c-blue order-card">
                    <div class="card-body">
                      <h6 class="text-white">Total Clicks</h6>
                      <h2 class="text-right text-white">
                        <i class="feather check-circle icon-check-circle float-left"></i>
                        <span id="totalClicks">0</span>
                      </h2>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>

          <div id="detailed-div" class="d-none">
            <button type="button" class="btn btn-secondary backToHome"><i class="feather icon-chevron-left"></i>
              Back</button>
            <div class="col-md-12 pt-2 pb-5">
              <div class="frm-border">
                <form id="detailed-controls-form">
                  <div class="row">
                    <div class="col-md-4">
                      <div class="form-group">
                        <label for="txt-from">Mobile Number (+91)</label>
                        <input type="text" class="form-control" id="mobileNumber"
                          placeholder="Enter 10 digit mobile number" aria-label="Mobile Number"
                          aria-describedby="mobile-addon" pattern="^[0-9]{10}$" required>
                      </div>
                    </div>
                    <div class="col-md-2">
                      <div class="form-group mt-4 pt-2">
                        <input type="hidden" id="detailed-pageNumber" value="1" />
                        <input type="hidden" id="detailed-totalPages" value="1" />
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                    </div>
                    <div class="col-md-2 form-group mt-4 pt-2">
                      <button class="btn btn-info  d-none" id="detailed-donwloadFileButton"></button>
                    </div>
                  </div>
                </form>
              </div>
              <table id="detailed-misTable" class="table table-striped table-sm table-bordered dt-responsive nowrap"
                style="width:100%"></table>
              <div class="tablePageNavi text-center">
                <ul id="detailed-misPagination" class="pagination table-pagination">
                  <li class="page-item"><a class="page-link" id="detailed-pagePrev" href="#">Previous</a></li>
                  <li class="page-item"><a class="page-link" id="detailed-pageNext" href="#">Next</a></li>
                </ul>
              </div>
            </div>
          </div>

          {{> mainLoader }}

        </div>
      </div>
    </div>
  </div>
  <div class="footer-div">
    <span class="copy float-left">
      <p id="demo"></p> &copy; All Rights Reserved
    </span>
    <span class="float-right">
      <ul class="social-media-icon">
        <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
        <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
        <li><a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
        <li><a href="#"><i class="fa fa-rss" aria-hidden="true"></i></a></li>
        <li><a href="#"><i class="fa fa-whatsapp" aria-hidden="true"></i></a></li>
      </ul>
    </span>
  </div>
</div>